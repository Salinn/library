<% provide(:users, 'active') %> 
<%- model_class = User -%>
<div class="page-header">
  <h1><%=t '.title', default: model_class.model_name.human.pluralize.titleize %></h1>
</div>
<%= search_form_for @q do |f| %>  
  <%= f.label :first_name_cont %>  
  <%= f.search_field :first_name_cont %>  
  <%= f.label :last_name_cont %>  
  <%= f.search_field :last_name_cont %> 
  <%= f.label :email_cont %>  
  <%= f.search_field :email_cont %> 
  <%= f.submit %>  
<% end %>  

<%= link_to 'New', new_user_path, remote: true, class: 'btn btn-primary' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= sort_link(@q,:first_name) %></th>
      <th><%= sort_link(@q,:last_name) %></th>
      <th><%= sort_link(@q,:email) %></th>
      <th><%=t '.actions', default: t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody id='users'>
    <%= render @users %>
  </tbody>
</table>

<%= will_paginate @users, renderer: BootstrapPagination::Rails %>  

