<%= form_for @book, html: { class: 'form-horizontal' } do |f| %>
  <%= render 'layouts/errors', object: @book %>
  
  <div class="form-group">
    <%= f.label :title, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :title, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :author, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :author, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :section, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :section, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :library_id, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :library_id, class: 'text_field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, class: 'btn btn-primary' %>
      <%= link_to 'Cancel', books_path, class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
