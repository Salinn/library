<%= form_for @library, remote: true, html: { class: 'form-horizontal' } do |f| %>
  <%= render 'layouts/errors', object: @library %>
  
  <div class="form-group">
    <%= f.label :name, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :name, class: 'text_field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, class: 'btn btn-primary' %>
      <%= link_to 'Cancel', libraries_path, class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
