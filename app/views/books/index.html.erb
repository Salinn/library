<% provide(:books, 'active') %>
<%- model_class = Book -%>
<div class="page-header">
  <h1><%=t '.title', default: model_class.model_name.human.pluralize.titleize %></h1>
</div>
<%= search_form_for @q do |f| %>  
  <%= f.label :title_cont %>  
  <%= f.search_field :title_cont %>  
  <%= f.label :author_cont %>  
  <%= f.search_field :author_cont %> 
  <%= f.label :section_cont %>  
  <%= f.search_field :section_cont %> 
  <%= f.label :library_name_cont %>  
  <%= f.search_field :library_name_cont %> 
  <%= f.submit %>  
<% end %>  
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= sort_link(@q, :title) %></th>
      <th><%= sort_link(@q, :author) %></th>
      <th><%= sort_link(@q, :section) %></th>
      <th><%= sort_link(@q, :library) %></th>
      <th><%=t '.actions', default: t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
          <td><%= book.title %></td>
          <td><%= book.author %></td>
          <td><%= book.section %></td>
          <td><%= book.library.name %></td>
        <td>
          <%= link_to book_path(book), class: 'btn btn-xs', title: "#{ t('.show', default: t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
          <%- end -%>
          <%= link_to edit_book_path(book), class: 'btn btn-xs', title: "#{ t('.edit', default: t('helpers.links.edit')) }" do %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to book_path(book), method: :delete, data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-xs', title: "#{ t('.destroy', default: t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @books, renderer: BootstrapPagination::Rails %> 

<%= link_to t('.new', default: t("helpers.links.new")),
            new_book_path,
            class: 'btn btn-primary' %>
